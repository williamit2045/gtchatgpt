

<%- include('./partials/header', { title: 'Make Cohort' }) %>
<%- include('./partials/nav') %>

<main class="make-cohort">
    <div class="container">
        <header class="page-header">
            <h1>Create a New Cohort</h1>
            <p class="header-subtitle">What represents you or what you believe?</p>
        </header>

        <div class="form-container">
            <form class="make-cohort-form" action="/cohort/make" method="POST">
                <div class="form-group">
                    <label for="cohort">Cohort:</label>
                    <input type="text" id="cohort" name="cohort" required 
                           placeholder="Say what you want.">
                    <span class="form-hint">Choose a cohort that reflects who you are or what you would agree with.</span>
                </div>

                <div class="form-group">
                    <label for="topics">Topics (Optional)</label>
                    <input type="text" id="topics" name="topics" 
                           placeholder="Separate topics with commas">
                    <span class="form-hint">Add relevant topics to develop knowledge around your cohort</span>
                </div>

                <button type="submit" class="btn btn-primary">Create Cohort</button>
            </form>

            <div class="form-sidebar">
                <div class="info-card">
                    <h3>Tips for Creating a Cohort</h3>
                    <ul class="tips-list">
                        <li>Try to communicate one concept rather than many</li>
                        <li>Consider privacy implications</li>
                        <li>Add relevant topics for better discovery</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>

