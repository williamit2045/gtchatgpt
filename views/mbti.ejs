<!-- views/mbti.ejs -->
<%- include('./partials/header', { title: title }) %>
<%- include('./partials/nav') %>

<main class="mbti-test">
  <h1><%= title %></h1>
  <div class="quiz-container">
    <form action="/quiz/answer" method="POST">
      <h3>Question <%= currentIndex + 1 %> of <%= totalQuestions %></h3>
      <p class="question-text"><%= questionKey %></p>
      
      <div class="options">
        <% options.forEach((answer, answerIndex) => { %>
          <label>
            <input type="radio" name="answer" value="<%= answer.cohort %>" required>
            <%= answer.cohort %>
          </label>
        <% }) %>
      </div>
      
      <div class="button-container">
        <button type="submit" class="next-button">Next</button>
      </div>
    </form>
  </div>
</main>

<%- include('./partials/footer') %>

<style>
/* General Layout */
.mbti-test {
  max-width: 800px;
  margin: 0 auto;
  padding: 1rem;
}

.mbti-test h1 {
  font-size: 2rem;
  color: #4a9eff;
  text-align: center;
  margin-bottom: 1.5rem;
}

/* Quiz Container */
.quiz-container {
  background-color: #1c1f26;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

/* Question Styling */
.question-text {
  font-size: 1.2rem;
  color: #e6e6e6;
  margin-bottom: 1rem;
  text-align: left;
}

/* Options Styling */
.options label {
  display: flex;
  align-items: center;
  font-size: 1.1rem;
  color: #e6e6e6;
  margin: 0.5rem 0;
}

.options input[type="radio"] {
  margin-right: 0.75rem;
}

/* Button Styling */
.button-container {
  margin-top: 2rem;
  text-align: center;
}

.next-button {
  padding: 0.75rem 1.5rem;
  background-color: #34495E;
  color: #e6b477;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.3s, color 0.3s;
}

.next-button:hover {
  background-color: #2C3E50;
  color: #ffffff;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .mbti-test h1 {
    font-size: 1.8rem;
  }
  .quiz-container {
    padding: 1.5rem;
  }
  .next-button {
    width: 100%;
  }
}
</style>
