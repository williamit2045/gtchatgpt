<%- include('./partials/header', { title: 'Home' }) %>
<%- include('./partials/nav') %>

<main class="landing-page">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <p class="intro-title">Globethoughts</p>
            <p class="tagline">Where collective intelligence meets human understanding</p>
            <p class="intro-text">Begin by exploring yourself with our MBTI assessment, then discover shared insights with others.</p>
            <a href="/quiz/mbti" class="cta-button">Take the MBTI Assessment</a>
        </div>
    </section>

    <!-- Mission Statement -->
    <section class="mission">
        <h2>Our Vision</h2>
        <p class="vision-text">Globethoughts fosters social integration through shared understanding, enhancing our collective intelligence.</p>
        <div class="mission-cards">
            <div class="mission-card"><h3>Understanding</h3><p>Bridging diverse perspectives for deeper empathy.</p></div>
            <div class="mission-card"><h3>Community</h3><p>Connecting individuals worldwide for common goals.</p></div>
            <div class="mission-card"><h3>Integration</h3><p>Building a network of shared understanding.</p></div>
        </div>
    </section>

    <!-- Inspiration Section as Pseudo-Footer -->
    <section class="inspiration">
        <h2>Intellectual Foundation</h2>
        <p>Inspired by thinkers who envision our potential:</p>
        <ul class="thinkers-list">
            <li>Nick Bostrom - Human Potential & Singularity</li>
            <li>Ray Kurzweil - Human-Machine Evolution</li>
            <li>Joseph Henrich - Cultural Evolution</li>
            <li>Steven Pinker - Human Progress</li>
            <li>Kevin Kelly - Technological Symbiosis</li>
            <li>Gregg Henriques - Unified Theory of Knowledge</li>
        </ul>
    </section>
</main>

<%- include('./partials/footer') %>

